<%= form_for [:admin, @product] do |f| %>
  <div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name %>
  </div>

  <div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, class: "ckeditor" %>
  </div>

  <div class="form-group">
  <%= f.label :price %>
  <%= f.text_field :price %>
  </div>

  <div class="form-group">
   <%= f.label :image_url %>
   <%= f.text_field :image_url %>
  </div>
  
  <%= f.submit "Uložiť produkt" %>

<% end %>