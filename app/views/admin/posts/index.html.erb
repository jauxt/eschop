<h1>Admin článkov</h1>

<%= link_to "Pridať článok", new_admin_post_path, class: "btn btn-primary" %>

<table class="table">
  <thead>
  	<tr>
  	  <th>Názov</th>
  	  <th>Publikované</th>
  	  <th></th>

  	</tr>
  </thead>

  <tbody>
<% @posts.each do |post| %>
   
 <tr>
   <td><%= post.title %></td>
   <td><%= post.published %></td>
   <td><%= link_to "Upraviť", edit_admin_post_path(post), class: "btn btn-primary" %> | 
       <%= link_to "Zmazať", admin_post_path(post), method: "delete", confirm: "naozaj?", class: "btn btn-primary" %></td>
 </tr>
<% end %>
  </tbody>
</table>
