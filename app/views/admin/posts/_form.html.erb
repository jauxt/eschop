<%= form_for [:admin, @post] do |f| %>
  <div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
  <%= f.label :category_id %>
    <%= f.select :category_id, Category.all.map{ |c| [c.name, c.id] }, {prompt: "Vyber kategóriu"}, {class: "form-control"}  %>
  </div>

  <div class="form-group" data-no-turbolink>
  <%= f.label :body %>
  <%= f.text_area :body, class: "form-control ckeditor" %>
  </div>

  <div class="form-group">
  <%= f.check_box :published %>
  <%= f.label :published, class: "form-control" %>
  </div>
  
  <%= f.submit "Uložiť článok" %>

<% end %>