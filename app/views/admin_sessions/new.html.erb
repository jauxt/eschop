
<%= form_tag admin_sessions_path do %>
 <h3>Prihlásenie</h3>
 <p><%= flash[:alert] %></p>

	<div class="form-group">
		<%= label_tag :email %>
		<%= text_field_tag :email, nil, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= label_tag :password %>
		<%= password_field_tag :password, nil, class: "form-control" %>
	</div>

	<%= submit_tag "Prihlásiť sa" %>

<% end %>